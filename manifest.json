{
  "manifest_version": 3,
  "name": "Adobe Stock Auto Metadata Generator",
  "version": "1.0",
  "description": "Generate metadata for Adobe Stock contributors",
  "permissions": [
    "activeTab", 
    "scripting", 
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://contributor.stock.adobe.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}